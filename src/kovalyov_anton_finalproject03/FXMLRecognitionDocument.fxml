<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kovalyov_anton_finalproject03.FXMLRecognitionController">
   <top>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Recognition Operations" BorderPane.alignment="TOP_CENTER">
         <BorderPane.margin>
            <Insets bottom="20.0" />
         </BorderPane.margin></Text>
   </top>
   <bottom>
      <Text fx:id="tInfo" strokeType="OUTSIDE" strokeWidth="0.0" BorderPane.alignment="BOTTOM_LEFT" />
   </bottom>
   <left>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#loadImage" prefWidth="120.0" text="Load Image" />
            <Button mnemonicParsing="false" onAction="#recognize" prefWidth="120.0" text="Recognize" />
         </children>
      </VBox>
   </left>
   <center>
      <HBox alignment="TOP_CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="selectedImageView" fitHeight="500.0" fitWidth="400.0" pickOnBounds="true" />
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
               <children>
                  <ImageView fx:id="recognizedImageView" fitHeight="500.0" fitWidth="400.0" pickOnBounds="true" />
                  <Text fx:id="tName" fill="RED" strokeType="OUTSIDE" strokeWidth="2.0">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Text>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
